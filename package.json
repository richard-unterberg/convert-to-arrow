{
	"name": "convert-to-arrow",
	"version": "1.0.12",
	"author": "https://github.com/richard-unterberg",
  "homepage": "https://richard-unterberg.github.io/convert-to-arrow",
	"description": "Codemod to safely convert function declarations into equivalent arrow-function expressions.",
	"type": "module",
	"keywords": [
    "react",
    "classmate",
    "typescript",
    "dynamic-classnames",
    "dynamic-styles",
    "dynamic-variants",
    "css",
    "css-in-js",
    "utility-first",
    "utility-first-classnames",
    "classname",
    "classname-variants",
    "frontend",
    "ssr",
    "tailwind",
    "unocss"
  ],
	"workspaces": [
    "web"
  ],
	"bin": {
		"convert-to-arrow": "./dist/cli.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "tsx src/cli.ts",
		"build": "tsup",
		"lefthook": "lefthook install",
		"prepublishOnly": "npm run build",
		"test": "node dist/cli.js --help",
		"testPublish": "npm publish --dry-run",
		"release": "npm publish --access public",
		"web:build": "cd web/ && npm run build",
    "web": "cd web/ && npm run dev",
    "web:prod": "npm run web:build && npm run web:preview",
    "web:preview": "cd web/ && npm run preview"
	},
	"sideEffects": false,
	"dependencies": {
		"ts-morph": "^26.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.15.21",
		"tsup": "^8.5.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"lefthook": "^1.11.13"
	},
	"engines": {
		"node": ">=18"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/richard-unterberg/convert-to-arrow"
	}
}
