{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": true
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "dist"]
}